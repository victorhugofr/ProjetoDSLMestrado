grammar com.ufrn.atad.Atad with org.eclipse.xtext.common.Terminals

generate atad "http://www.ufrn.com/atad/Atad"

DeclaraComando:
	comandos+=Quando*
	acoes+=AdicaoComando*
	verificacao+=ComandosValidadores*;
	
Clicar:
	'clicar' 'em' name=STRING
;

Navegar:
	'navegar' name=STRING
;

Escrever:
	'escrever' name=STRING
;

ComandosAcao:
	Clicar|Navegar|Escrever	
;

Verifique:
	'Verifique' 'que' name=STRING
;

ComandosValidadores:
	Verifique
;

AdicaoComando:
	'E' ComandosAcao
;

Quando: 
	'Quando' ComandosAcao
;